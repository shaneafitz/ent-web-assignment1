<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
    {{> title-card title="Welcome to the Islands of Ireland." subTitle="Update your Island..."}}
    {{> main-menu }}
</div>

<div class="uk-container uk-margin">
    <div class="uk-child-width-expand uk-flex-center uk-flex-middle uk-text-center" uk-grid>
        <div class="uk-width-auto@m">
            <img width="300" src= "images/edit.png">
        </div>
        <div class="uk-width-expand@m">
            <div class="uk-card uk-card-default uk-width-xlarge uk-card-body uk-box-shadow-large">
                <h3 class="uk-card-title uk-text-center">Island Details: </h3>
                <form action="updatePoi/{{_id}}" method="POST">
                    <div class="uk-margin">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: pencil"></span>
                            <input class="uk-input uk-form-large" type="text" name="Name" value="{{poi.name}}">
                        </div>
                    </div>
                    <div class="uk-margin">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: pencil"></span>
                            <input class="uk-input uk-form-large" type="text" name="Description" value="{{poi.description}}">
                        </div>
                    </div>
                    <div class="uk-margin">
                        <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">Save </button>
                    </div>
                </form>
                {{> error }}
            </div>
        </div>
    </div>
</div>