<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <form class="uk-form-stacked uk-text-left" action="/create-poi" method="POST">
        <div class="uk-grid uk-grid-stack">
            <div class="uk-width-1-2@m">
                <div class="uk-margin">
                    <label class="uk-form-label" for="form-stacked-text">Welcome, please enter the Islands Name and Description</label>
                    <input class="uk-input" id="form-stacked-text" type="text" name="name" placeholder="Name" />
                </div>
                <div class="uk-margin">
                    <textarea class="uk-textarea" rows="5" id="form-stacked-text"  name="description" placeholder="Description"></textarea>
                </div>
            </div>
            <div class=" uk-width-1-2@m">
                <div class="uk-margin">
                    <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Add Island</button>
                </div>
            </div>
        </div>
    </form>
</div>